<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSharedTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/media_links_and_docs"
            android:textSize="@dimen/bigText"
            android:background="@color/white"
            android:layout_marginStart="@dimen/margin"
            android:padding="@dimen/padding"
            app:layout_constraintEnd_toStartOf="@+id/tvSharedCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSharedCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/_200"
            android:textSize="@dimen/mediumText"
            android:background="@color/white"
            android:layout_marginEnd="@dimen/margin"
            android:padding="@dimen/padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rvSharedItems"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSharedItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/padding"
            app:layout_constraintTop_toBottomOf="@+id/tvSharedTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>