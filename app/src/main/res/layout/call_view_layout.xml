<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civCallerDp"
        android:layout_width="@dimen/imageViewSize"
        android:layout_height="@dimen/imageViewSize"
        android:src="@drawable/placeholder"
        android:layout_margin="@dimen/margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_caller"
        android:textSize="@dimen/mediumText"
        android:textColor="@color/black"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/civCallerDp"/>

    <ImageView
        android:id="@+id/ivDenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call_received"
        android:layout_marginStart="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintStart_toEndOf="@+id/civCallerDp"/>

    <TextView
        android:id="@+id/tvCallTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_of_call"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/ivDenote"
        app:layout_constraintTop_toBottomOf="@+id/tvName"/>

    <ImageView
        android:id="@+id/ivMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_marginEnd="@dimen/margin"
        android:padding="@dimen/padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="@dimen/lineHeight"
        android:background="@color/dull_black"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/civCallerDp"/>

</androidx.constraintlayout.widget.ConstraintLayout>